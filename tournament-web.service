[Unit]
Description=Tournament Tracker Web Editor
After=network.target

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/home/ubuntu/claude/tournament_tracker
ExecStart=/usr/bin/python3 /home/ubuntu/claude/tournament_tracker/editor_web_service.py
Restart=always
RestartSec=10
StandardOutput=append:/home/ubuntu/claude/tournament_tracker/editor_web.log
StandardError=append:/home/ubuntu/claude/tournament_tracker/editor_web_error.log

[Install]
WantedBy=multi-user.target